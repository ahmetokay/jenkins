pipeline {
    agent any

    stages {
    
        stage('Clone repository') {
            steps {
                git branch: 'main', url: 'https://github.com/ahmetokay/innova.git'
                
                echo "innova git çekildi"
                
                sh "ls -lat"
                
                git branch: 'main', url: 'https://github.com/ahmetokay/jenkins.git'
                
                echo "jenkins git çekildi"
                
                sh "ls -lat"
            }
        }
    
        stage('Java Version Test') {
            steps {
                sh 'java -version'

                sh "ls -lat"
            }
        }
        
        stage('Java Build') {
            steps {
                sh 'javac example.java'

                sh "ls -lat"
                echo "dosya başarılı şekilde build edildi"
            }
        }
        
        stage('Java Run') {
            steps {
                sh 'java Main'

                echo "başarılı"
           
            }
        }
    }
    
    post {  
         always {  
             echo 'This will always run'  
         }  
         success {  
             echo 'This will run only if successful'  
             mail bcc: '', body: "<b>Example</b><br>Project: ${env.JOB_NAME} <br>Build Number: ${env.BUILD_NUMBER} <br> URL de build: ${env.BUILD_URL}", cc: '', charset: 'UTF-8', from: '', mimeType: 'text/html', replyTo: '', subject: "ERROR CI: Project name -> ${env.JOB_NAME}", to: "ahmetokay14@gmail.com";  
         }  
         failure {  
             mail bcc: '', body: "<b>Example</b><br>Project: ${env.JOB_NAME} <br>Build Number: ${env.BUILD_NUMBER} <br> URL de build: ${env.BUILD_URL}", cc: '', charset: 'UTF-8', from: '', mimeType: 'text/html', replyTo: '', subject: "ERROR CI: Project name -> ${env.JOB_NAME}", to: "ahmetokay14@gmail.com";  
         }  
         unstable {  
             echo 'This will run only if the run was marked as unstable'  
         }  
         changed {  
             echo 'This will run only if the state of the Pipeline has changed'  
             echo 'For example, if the Pipeline was previously failing but is now successful'  
         }  
     }
}
