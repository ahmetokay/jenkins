pipeline {
    agent any

    stages {
    
        stage('Clone repository') {
            steps {
                git branch: 'main', url: 'https://github.com/ahmetokay/jenkins.git'
            }
        }
    
        stage('Java Version Test') {
            steps {
                sh 'java -version'

                sh "ls -lat"
            }
        }
        
        stage('Java Build') {
            steps {
                sh 'javac example.java'

                sh "ls -lat"
                echo "dosya başarılı şekilde build edildi"
            }
        }
        
        stage('Java Run') {
            steps {
                sh 'java example.class'

                echo "başarılı"
            }
        }
    }
}
